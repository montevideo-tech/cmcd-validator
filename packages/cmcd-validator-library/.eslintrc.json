{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest/globals": true        
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages",
                "default": "false"
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "valid-typeof": "off"
    },
    "plugins": ["jest"]    
}
